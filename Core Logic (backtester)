import pandas as pd

def add_sma(df, period):
    """
    Calculates and adds a Simple Moving Average (SMA) column to the DataFrame.

    Args:
        df (pd.DataFrame): DataFrame with a 'Close' price column.
        period (int): The period for the SMA calculation.

    Returns:
        pd.DataFrame: DataFrame with the new SMA column.
    """
    df[f'SMA_{period}'] = df['Close'].rolling(window=period).mean()
    return df

def add_rsi(df, period=14):
    """
    Calculates and adds the Relative Strength Index (RSI) to the DataFrame.

    Args:
        df (pd.DataFrame): DataFrame with a 'Close' price column.
        period (int): The period for the RSI calculation.

    Returns:
        pd.DataFrame: DataFrame with the new 'RSI' column.
    """
    delta = df['Close'].diff()
    gain = (delta.where(delta > 0, 0)).rolling(window=period).mean()
    loss = (-delta.where(delta < 0, 0)).rolling(window=period).mean()

    rs = gain / loss
    df['RSI'] = 100 - (100 / (1 + rs))
    return df
